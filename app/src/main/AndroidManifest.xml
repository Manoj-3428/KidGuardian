<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phonelock">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE" />
    <uses-permission android:name="android.permission.BIND_DEVICE_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:name=".PhoneLockApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhoneLock">
        <service
            android:name=".ScreenshotCaptureService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />
        
        <service
            android:name=".LockMonitorService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Child phone lock monitoring" />
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <service
            android:name=".AbuseDetectionService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PhoneLock">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScreenshotPermissionActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:excludeFromRecents="true"
            android:exported="false" />
        <activity
            android:name=".LockScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.PhoneLock"
            android:excludeFromRecents="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:screenOrientation="portrait"
            android:taskAffinity="com.example.phonelock.lock"
            android:launchMode="singleTask"
            android:clearTaskOnLaunch="true"
            android:noHistory="false"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".FlipAuthActivity"
            android:exported="false"
            android:theme="@style/Theme.PhoneLock"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RoleSelectionActivity"
            android:exported="false"
            android:theme="@style/Theme.PhoneLock"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AuthActivity"
            android:exported="false"
            android:theme="@style/Theme.PhoneLock"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChildProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.PhoneLock"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChildDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.PhoneLock"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ParentDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.PhoneLock"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ParentProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.PhoneLock"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PermissionSetupActivity"
            android:exported="false"
            android:theme="@style/Theme.PhoneLock"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ParentLinkAccountActivity"
            android:exported="false"
            android:theme="@style/Theme.PhoneLock"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ParentLoginActivity"
            android:exported="false"
            android:theme="@style/Theme.PhoneLock"
            android:screenOrientation="portrait" />

        <receiver
            android:name=".MyDeviceAdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_receiver" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
